{
	"info": {
		"_postman_id": "hotel-reservation-system",
		"name": "Hotel Reservation System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "User Registration",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"password\": \"StrongPassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "User Login",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"StrongPassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{refresh_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/refresh",
							"host": ["{{base_url}}"],
							"path": ["auth", "refresh"]
						}
					}
				}
			]
		},
		{
			"name": "Hotels",
			"item": [
				{
					"name": "List Hotels",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/hotels?city=New York&country=USA&page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["hotels"],
							"query": [
								{"key": "city", "value": "New York"},
								{"key": "country", "value": "USA"},
								{"key": "page", "value": "1"},
								{"key": "limit", "value": "10"}
							]
						}
					}
				},
				{
					"name": "Get Hotel Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/hotels/{{hotel_id}}",
							"host": ["{{base_url}}"],
							"path": ["hotels", "{{hotel_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Rooms",
			"item": [
				{
					"name": "Search Available Rooms",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/rooms/search?check_in=2024-07-15&check_out=2024-07-20&guests=2&hotel_id={{hotel_id}}",
							"host": ["{{base_url}}"],
							"path": ["rooms", "search"],
							"query": [
								{"key": "check_in", "value": "2024-07-15"},
								{"key": "check_out", "value": "2024-07-20"},
								{"key": "guests", "value": "2"},
								{"key": "hotel_id", "value": "{{hotel_id}}"}
							]
						}
					}
				},
				{
					"name": "Get Room Types",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/room-types",
							"host": ["{{base_url}}"],
							"path": ["room-types"]
						}
					}
				}
			]
		},
		{
			"name": "Reservations",
			"item": [
				{
					"name": "Create Reservation",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"room_id\": \"{{room_id}}\",\n    \"check_in_date\": \"2024-07-15\",\n    \"check_out_date\": \"2024-07-20\",\n    \"num_guests\": 2,\n    \"special_requests\": \"Late check-in\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/reservations",
							"host": ["{{base_url}}"],
							"path": ["reservations"]
						}
					}
				},
				{
					"name": "List User Reservations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/reservations?status=CONFIRMED&page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["reservations"],
							"query": [
								{"key": "status", "value": "CONFIRMED"},
								{"key": "page", "value": "1"},
								{"key": "limit", "value": "10"}
							]
						}
					}
				},
				{
					"name": "Cancel Reservation",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": \"CANCELLED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/reservations/{{reservation_id}}",
							"host": ["{{base_url}}"],
							"path": ["reservations", "{{reservation_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Payments",
			"item": [
				{
					"name": "Create Payment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"reservation_id\": \"{{reservation_id}}\",\n    \"payment_method\": \"CREDIT_CARD\",\n    \"amount\": 499.99\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/payments",
							"host": ["{{base_url}}"],
							"path": ["payments"]
						}
					}
				},
				{
					"name": "Get Payment Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/payments/{{payment_id}}",
							"host": ["{{base_url}}"],
							"path": ["payments", "{{payment_id}}"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080/api/v1"
		}
	]
}